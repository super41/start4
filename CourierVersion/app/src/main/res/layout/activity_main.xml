<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.MainActivity">

    <com.example.courierversion.view.TopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:isLeftShow="false"
        app:title="@string/courier_terminal"
        app:rightDrawable="@drawable/btn_person_selector"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_scan"
            android:text="@string/to_scan"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/white"
            android:background="@drawable/btn_warm_selector"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/btn_register"
            android:text="@string/to_register"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/white"
            android:background="@drawable/btn_warm_selector"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
